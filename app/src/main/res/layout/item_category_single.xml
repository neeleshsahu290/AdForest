<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_button_selector"
    android:id="@+id/lyt"
    android:layout_height="wrap_content"

    android:padding="10dp">

    <TextView
        android:layout_marginEnd="20dp"
        android:textColor="@drawable/ic_buttontextcolor"
        app:layout_constraintTop_toTopOf="@id/cat_drawable"
        app:layout_constraintBottom_toBottomOf="@id/cat_drawable"
        app:layout_constraintEnd_toStartOf="@id/cat_drawable"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/alertTextView1"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        tools:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <ImageView
        android:visibility="invisible"
        android:id="@+id/cat_drawable"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>